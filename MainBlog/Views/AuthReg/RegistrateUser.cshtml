@model MainBlog.ViewModels.RegistrateViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Окно регистрации";
}

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="text-center">
    <h1 style="color: rgba(57,227,237,1); font-family:Arial">Окно регистрации</h1>
</div>
<hr />

<div style="position: relative; position: relative; background-color: rgba(0,0,0,0.5); color: rgba(57,227,237,1)">
    <form asp-controller="AuthReg" asp-action="RegistrateUser" style="display: grid">

        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" style="color:red;"></span>

        <label asp-for="Age"></label>
        <input asp-for="Age" />
        <span asp-validation-for="Age" style="color:red;"></span>

        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" style="color:red;"></span>

        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password" style="color:red;"></span>

        <label asp-for="ComparePassword"></label>
        <input asp-for="ComparePassword" />
        <span asp-validation-for="ComparePassword" style="color:red;"></span>

        <input class="AccountButton" type="submit" value="Зарегестрироваться" />
    </form>
</div>

<script>
    function validateForm() {
        let inputs = document.getElementsByClassName('inputMain');
        for (var elem of inputs) {
            if (elem.value.trim() === '') {
                elem.style.backgroundColor = 'red';
                elem.setAttribute('placeholder', 'Поле обязательно для заполнения!');
                return false; // не отправлять форму
            }
        }
        return true; // отправить форму на сервер
    }
</script>